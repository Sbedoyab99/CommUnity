@typeparam TItem

@if (MyList == null)
{
    if (Loading is null)
    {
        <p>Loading...</p>
    }
    else
    {
        @Loading
    }
} 
else if (MyList.Count == 0) 
{
    @if (NoRecords is null)
    {
        <p>No hay registros para mostrar</p>
    }
    else
    {
        @NoRecords
    }
}
else
{
    @Body
}
