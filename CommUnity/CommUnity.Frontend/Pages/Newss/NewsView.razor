@page "/news/view/{NewsId:int}"


<MudContainer Class="pb-5">
    @if(loading)
    {
        <Loading/>
    }
    else
    {   
        if(news == null)
        {
            <MudAlert Severity="Severity.Error">La noticia que buscas no se ha encontrado.</MudAlert>
        }
        else
        {
            <MudText Typo="Typo.h5">@news.Title</MudText>

            <MudText Typo="Typo.h6">@news.ResidentialUnit?.Name</MudText>

            <MudPaper Elevation="4" Class="my-4" Style="width: 100%; max-height: 300px; overflow: hidden;">
                <MudImage Src="@news.Picture" Alt="Imagen" Class="rounded-lg" Style="width: 100%; max-height: 300px; object-fit: cover;" />
            </MudPaper>

            <MudText Typo="Typo.body1" Style="white-space: pre-line">@news.Content</MudText>
        }
    }
    <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.ArrowBack" Color="Color.Tertiary" OnClick="ReturnAction">Regresar</MudButton>
</MudContainer>