
<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudTextField Label="Titulo" @bind-Value="@newsDTO.Title" />
            <ValidationMessage For="@(() => newsDTO.Title)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudDatePicker Label="Fecha" Date="@newsDTO.Date" DateChanged="OnDateChange" />
            <ValidationMessage For="@(() => newsDTO.Date)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField Label="Contenido" @bind-Value="@newsDTO.Content" Variant="Variant.Outlined" Lines="25" />
            <ValidationMessage For="@(() => newsDTO.Content)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <InputImg Label="Foto" ImageSelected="ImageSelected" ImageURL="@imageUrl" />
        </MudItem>
        <MudItem>
            <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.ArrowBack" Color="Color.Info" OnClick="ReturnAction">
                Regresar
            </MudButton>
            <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Check" Color="Color.Primary" ButtonType="ButtonType.Submit">
                Guardar
            </MudButton>
        </MudItem>
    </MudGrid>
</EditForm> 