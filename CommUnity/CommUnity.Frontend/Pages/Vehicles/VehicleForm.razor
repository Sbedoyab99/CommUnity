
<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudGrid Class="mb-4">
        <MudItem xs="12" sm="6">
            <MudTextField Label="Placa" @bind-Value="@Vehicle.Plate" />
            <ValidationMessage For="@(() => Vehicle.Plate)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudSelect @bind-Value="@Vehicle.Type" Label="Tipo" AnchorOrigin="Origin.BottomCenter">
                @foreach (var type in vehicleTypes)
                {
                    <MudSelectItem Value="@type" />
                }
            </MudSelect>
            <ValidationMessage For="@(() => Vehicle.Type)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField Label="Descripción" @bind-Value="@Vehicle.Description" />
            <ValidationMessage For="@(() => Vehicle.Description)" />
        </MudItem>
    </MudGrid>
    <MudItem>
        <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.ArrowBack" Color="Color.Info" OnClick="ReturnAction">
            Regresar
        </MudButton>
        <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Check" Color="Color.Primary" ButtonType="ButtonType.Submit">
            Guardar
        </MudButton>
    </MudItem>
</EditForm>
