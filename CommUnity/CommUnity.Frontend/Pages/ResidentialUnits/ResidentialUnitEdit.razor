<MudDialog TitleClass="dialog-background-title">
    <TitleContent>
        <MudText Typo="Typo.h6">Editar Unidad Residencial</MudText>
    </TitleContent>
    <DialogContent>
        @if (loading)
        {
            <Loading />
        }
        else
        {
            <ResidentialUnitForm @ref="residentialUnitForm" ResidentialUnit="residentialUnit" OnValidSubmit="EditResidentialUnitAsync" ReturnAction="Return" IsEdit=true />
        }
    </DialogContent>
</MudDialog>