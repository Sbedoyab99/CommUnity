<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Editar Estado</MudText>
    </TitleContent>
    <DialogContent>
        @if (state is null)
        {
            <Loading />
        }
        else
        {
            <FormWithName @ref="stateForm" Label="Estado/Departamento:" Model="state" OnValidSubmit="SaveAsync" ReturnAction="Return" />
        }
    </DialogContent>
</MudDialog>
