@page "/RecoverPassword"

@if (loading)
{
    <Loading />
}

<EditForm Model="emailDTO" OnValidSubmit="SendRecoverPasswordEmailTokenAsync">
    <DataAnnotationsValidator />

    <MudContainer>
        <MudPaper Elevation="3" Style="max-width: 400px; margin: auto;">
            <MudCard>
                <MudCardHeader Class="text-center">
                    <CardHeaderContent>        
                        <MudText Typo="Typo.h5">
                            <MudIcon Icon="@Icons.Material.Filled.LockOpen" Size="Size.Large" Class="mr-2" /> 
                            Recuperación de Contraseña
                        </MudText>
                    </CardHeaderContent>
                </MudCardHeader>

                <MudCardContent>
                    <MudTextField Label="Email" @bind-Value="@emailDTO.Email">
                        <MudIcon Icon="@Icons.Material.Filled.Email" />
                    </MudTextField>
                    <ValidationMessage For="@(() => emailDTO.Email)" />
                </MudCardContent>

                <MudCardActions Class="justify-content-center">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit">
                        <MudIcon Icon="@Icons.Material.Filled.Send" Class="mr-1" />
                        Enviar
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudPaper>
    </MudContainer>
</EditForm>
