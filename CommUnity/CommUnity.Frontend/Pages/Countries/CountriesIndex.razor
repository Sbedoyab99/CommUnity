@page "/countries"

<h3>Paises</h3>
<div>
    <a class="btn btn-primary" href="/countries/create">Nuevo Pais</a>
</div>
<GenericList MyList="Countries">
    <Body>
        <Pagination CurrentPage="currentPage" TotalPages="totalPages" SelectedPage="SelectedPageAsync"/>
        <FilterComponent ApplyFilter="SetFilterValue"/>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Pais</th>
                    <th style="width:210px">Estados</th>
                    <th style="width:210px">Acciones</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var country in Countries!)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>@country.StatesNumber</td>
                        <td>
                            <a href="/countries/edit/@country.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a class="btn btn-info btn-sm" href="/countries/details/@country.Id">Detalles</a>
                            <button @onclick=@(() => DeleteAsync(country)) class="btn btn-danger btn-sm">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>
