<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Gestionar visitas</MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" sm="6" Class="d-flex justify-content-center">
                <MudButton Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Schedule"
                           Color="Color.Tertiary"
                           FullWidth="true"
                           OnClick="ScheduleVisitorModal">
                    Programar Visita
                </MudButton>
            </MudItem>
            <MudItem xs="12" sm="6" Class="d-flex justify-content-center">
                <MudButton Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.FormatListBulleted"
                           Color="Color.Primary"
                           FullWidth="true"
                           OnClick="ListVisitorModal">
                    Listar Visitas
                </MudButton>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudItem Class="d-flex align-content-lg-start">
            <MudButton Variant="Variant.Outlined"
                       StartIcon="@Icons.Material.Filled.ArrowBack"
                       Color="Color.Info" OnClick="Return">
                Regresar
            </MudButton>
        </MudItem>
    </DialogActions>
</MudDialog>
