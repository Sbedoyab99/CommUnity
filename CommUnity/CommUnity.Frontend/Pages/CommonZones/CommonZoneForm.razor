
<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudTextField Label="Nombre" @bind-Value="@CommonZone.Name" />
            <ValidationMessage For="@(() => CommonZone.Name)" />
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudTextField Label="Capacidad" @bind-Value="@CommonZone.Capacity" />
            <ValidationMessage For="@(() => CommonZone.Capacity)" />
        </MudItem>
        <MudItem xs="12" sm="12" style="text-align: center;">
            <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.ArrowBack" Color="Color.Info" OnClick="ReturnAction">
                Regresar
            </MudButton>
            <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Check" Color="Color.Primary" ButtonType="ButtonType.Submit">
                Guardar
            </MudButton>
        </MudItem>
    </MudGrid>
</EditForm>
